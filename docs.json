{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Mintie Calendar",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "installation"
            ]
          },
          {
            "group": "Core Features",
            "pages": [
              "features/tasks",
              "features/events",
              "features/filtering"
            ]
          },
          {
            "group": "API Integration",
            "pages": [
              "integration/authentication",
              "integration/api-keys",
              "integration/webhooks",
              "integration/analytics"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/task-management",
              "guides/calendar-integration",
              "guides/webhook-setup"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "openapi.json"
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/mintlify",
          "icon": "github"
        },
        {
          "anchor": "Community",
          "href": "https://mintlify.com/community",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@mintie.app"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://app.mintie.calendar"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintie",
      "github": "https://github.com/mintie",
      "linkedin": "https://linkedin.com/company/mintie"
    }
  }
}
